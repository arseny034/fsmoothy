{
  "name": "fsmoothy",
  "version": "1.9.0",
  "description": "FSMoothy is a feature-rich and easy-to-use finite state machine for TypeScript.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fsmoothy/fsmoothy.git"
  },
  "keywords": [
    "fsm",
    "state-machine",
    "typescript"
  ],
  "author": "Vassiliy Kuzenkov (bondiano)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fsmoothy/fsmoothy/issues"
  },
  "homepage": "https://github.com/fsmoothy/fsmoothy#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "postbuild": "cp -r package.json dist && cp -r README.md dist",
    "lint": "eslint .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage",
    "commit": "cz",
    "docs:build": "typedoc src/index.ts --tsconfig tsconfig.build.json",
    "postdocs:build": "cp -r logo docs",
    "release": "semantic-release",
    "clean": "rm -rf dist",
    "postversion": "cp -r package.json .."
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "semantic-release": "^22.0.12",
    "typedoc": "^0.25.4",
    "typedoc-plugin-extras": "^3.0.0",
    "typedoc-plugin-mermaid": "^1.10.0",
    "typedoc-plugin-replace-text": "^3.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
