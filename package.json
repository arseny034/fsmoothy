{
  "name": "fsmoothy",
  "version": "1.3.1",
  "description": "The Smoothie Sipper 3000: A Hilarious Typed State Machine for Maximum Smoothie Drinking Fun!",
  "main": "./index.js",
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fsmoothy/fsmoothy.git"
  },
  "keywords": [
    "fsm",
    "state-machine",
    "typescript"
  ],
  "author": "Vassiliy Kuzenkov (bondiano)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fsmoothy/fsmoothy/issues"
  },
  "homepage": "https://github.com/fsmoothy/fsmoothy#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "postbuild": "cp -r package.json dist && cp -r README.md dist",
    "lint": "eslint .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage",
    "commit": "cz",
    "docs:build": "typedoc src/index.ts --tsconfig tsconfig.build.json",
    "postdocs:build": "cp -r logo docs",
    "release": "semantic-release",
    "clean": "rm -rf dist",
    "postversion": "cp -r package.json .."
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/better-sqlite3": "^7.6.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitest/coverage-v8": "^0.34.5",
    "better-sqlite3": "^8.5.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-sonarjs": "^0.21.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "prettier": "^3.0.2",
    "semantic-release": "^21.1.1",
    "typedoc": "^0.25.0",
    "typedoc-plugin-extras": "^3.0.0",
    "typedoc-plugin-mermaid": "^1.10.0",
    "typedoc-plugin-replace-text": "^3.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.5"
  },
  "commit": "cz",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
